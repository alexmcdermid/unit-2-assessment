<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <h1>To Do List</h1>
      <ul>
      <% let counter = 0; %> 
      <% data.forEach(function(e){ %> 
        <li>
          <%= e.todo %> - <%= e.done %>  <a href="/<%= e.id %>" >DELETE</a>
        </li>
        <% counter++ %> 
      <% }) %> 
     </ul>
      <% if (counter==0){ %> 
      <h3>There are no To Dos yet!</h3>
      <% } %> 
      <hr>
      <form action="/" method="POST">
          <input id="todo" name="todo" autocomplete="off" class='form-control' type="text" class="validate" required="required" >
          <button  type="submit">ADD TODO</button>
    </form>
  </body>
</html>
